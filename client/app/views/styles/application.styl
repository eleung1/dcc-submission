// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

body
  padding-top 60px
  padding-bottom 40px

#notification-container
  position fixed
  top 194px

input[type="text"].m-wrap,
input[type="password"].m-wrap
  height auto
  line-height 15px
  margin 0

.m-input-append .add-on,
.m-input-prepend .add-on
  height auto
  line-height 20px

.m-input-append button,
.m-input-prepend button
  padding: 8px 12px;

table
 .table th, .table td
    line-height 13px

#login
  margin-top 40px

.login-inner
  margin: 0 auto;
  width: 570px;
  padding: 40px;
  background: #F9F9F9;
  border: 1px solid #EEE;