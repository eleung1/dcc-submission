{
   "$schema":"http://json-schema.org/draft-03/schema#",
   "id":"http://schema.dcc.icgc.org/genes.schema.json#",
   "title":"DCC gene model schema",
   "description":"Schema used to define and validate gene model documents",
   "type":"object",
   "properties":{
      "id":{
         "type":"string",
         "id":"id",
         "required":true
      },
      "canonical_transcript_id":{
         "type":"string",
         "id":"canonical_transcript_id",
         "required":true
      },
      "chromosome":{
         "type":"string",
         "id":"chromosome",
         "required":false
      },
      "end":{
         "type":"number",
         "id":"end",
         "required":false
      },
      "name":{
         "type":"string",
         "id":"name",
         "required":false
      },
      "start":{
         "type":"number",
         "id":"start",
         "required":false
      },
      "strand":{
         "type":"number",
         "id":"strand",
         "required":false
      },
      "symbol":{
         "type":"string",
         "id":"symbol",
         "required":false
      },
      "synonyms":{
         "type":"array",
         "id":"synonyms",
         "items":{
            "type":"string",
            "id":"0",
            "uniqueItems":true,
            "minItems":1,
            "required":false
         }
      },
      "transcripts":{
         "type":"array",
         "id":"transcripts",
         "required":false,
         "items":{
            "$ref":"#/definitions/transcript"
         }
      }
   },
   "definitions":{
      "transcript":{
         "type":"object",
         "properties":{
            "domains":{
               "type":"array",
               "id":"domains",
               "required":false,
               "items":{
                  "$ref":"#/definitions/domain"
               }
            },
            "endExon":{
               "type":"number",
               "id":"endExon",
               "required":false
            },
            "exons":{
               "type":"array",
               "id":"exons",
               "required":false,
               "items":{
                  "$ref":"#/definitions/exon"
               }
            },
            "isCanonical":{
               "type":"boolean",
               "id":"isCanonical",
               "required":false
            },
            "lengthAminoAcid":{
               "type":"number",
               "id":"lengthAminoAcid",
               "required":false
            },
            "lengthDNA":{
               "type":"number",
               "id":"lengthDNA",
               "required":false
            },
            "length":{
               "type":"number",
               "id":"length",
               "required":false
            },
            "numberOfExons":{
               "type":"number",
               "id":"numberOfExons",
               "required":false
            },
            "seqExonEnd":{
               "type":"number",
               "id":"seqExonEnd",
               "required":false
            },
            "seqExonStart":{
               "type":"number",
               "id":"seqExonStart",
               "required":false
            },
            "startExon":{
               "type":"number",
               "id":"startExon",
               "required":false
            },
            "transcript_id":{
               "type":"string",
               "id":"transcript_id",
               "required":false
            },
            "transcript_name":{
               "type":"string",
               "id":"transcript_name",
               "required":false
            },
            "translationId":{
               "type":"string",
               "id":"translationId",
               "required":false
            }
         }
      },
      "exon":{
         "type":"object",
         "required":false,
         "properties":{
            "endPhase":{
               "type":"number",
               "id":"endPhase",
               "required":false
            },
            "end":{
               "type":"number",
               "id":"end",
               "required":false
            },
            "startPhase":{
               "type":"number",
               "id":"startPhase",
               "required":false
            },
            "start":{
               "type":"number",
               "id":"start",
               "required":false
            }
         }
      },
      "domain":{
         "type":"object",
         "required":false,
         "properties":{
            "description":{
               "type":"string",
               "id":"description",
               "required":false
            },
            "end":{
               "type":"number",
               "id":"end",
               "required":false
            },
            "gffSource":{
               "type":"string",
               "id":"gffSource",
               "required":false
            },
            "hitName":{
               "type":"string",
               "id":"hitName",
               "required":false
            },
            "interproId":{
               "type":"string",
               "id":"interproId",
               "required":false
            },
            "start":{
               "type":"number",
               "id":"start",
               "required":false
            }
         }
      }
   }
}